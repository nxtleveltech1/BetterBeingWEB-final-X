# Better Being Backend API Environment Configuration Example
# Copy this file to .env and fill in the actual values

# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Valid API Keys for Service-to-Service Communication
VALID_API_KEYS=your-api-key-1,your-api-key-2

# Database Configuration (Optional)
DATABASE_URL=your_database_connection_string
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=betterbeing
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# AI Service Configuration
AI_SERVICE_TIMEOUT=30000
AI_CONFIDENCE_THRESHOLD=0.3
AI_MAX_RECOMMENDATIONS=20

# Email Configuration (Optional)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Better Being Wellness

# External API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key
NUTRITION_API_KEY=your_nutrition_api_key
WEATHER_API_KEY=your_weather_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/api.log

# Monitoring and Analytics (Optional)
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# File Storage (Optional - AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Payment Processing (Optional - Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Feature Flags
ENABLE_PRODUCT_RECOMMENDATIONS=true
ENABLE_AI_INSIGHTS=true
ENABLE_COMMUNITY_FEATURES=false
ENABLE_SUBSCRIPTION_TIERS=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000