    },
    {
      "label": "ğŸ”„ AI Design Iteration Loop",
      "type": "shell",
      "command": "node",
      "args": ["scripts/ai-design-iteration.js"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
