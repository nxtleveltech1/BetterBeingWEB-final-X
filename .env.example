# Better Being Frontend Environment Configuration Example
# Copy this file to .env.local and fill in the actual values

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=Better Being Wellness
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://your-domain.com

# API Configuration
NEXT_PUBLIC_API_URL=https://your-api-domain.com/api
NEXT_PUBLIC_API_TIMEOUT=30000
API_URL=https://your-api-domain.com/api

# Stack Auth Configuration (Optional)
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id
STACK_PROJECT_ID=your_stack_project_id
STACK_SECRET_SERVER_KEY=your_stack_secret_key
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_key

# Database Configuration (Optional)
DATABASE_URL=your_database_connection_string

# Stripe Configuration (Optional - for e-commerce)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics and Monitoring (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your_sentry_dsn

# External APIs (Optional)
OPENAI_API_KEY=your_openai_api_key
WEATHER_API_KEY=your_weather_api_key
NUTRITION_API_KEY=your_nutrition_api_key

# Email Service Configuration (Optional)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# File Storage Configuration (Optional)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=false

# SEO Configuration
NEXT_PUBLIC_SITE_NAME=Better Being Wellness
NEXT_PUBLIC_SITE_DESCRIPTION=Your wellness transformation starts here
NEXT_PUBLIC_SITE_KEYWORDS=wellness,health,natural products

# Business Information
NEXT_PUBLIC_COMPANY_NAME=Better Being Wellness
NEXT_PUBLIC_COMPANY_EMAIL=info@yourdomain.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com